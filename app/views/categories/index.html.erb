<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-striped">
  <thead>
    <tr>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <% if can? :update, category %>
        <td><%= link_to 'Show', category_path(category), class:"btn btn-primary"  %></td>
        <% end %>
        <% if can? :update, category %>
        <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-success"  %></td>
        <% end %>
        <% if can? :delete, category %>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, @categories %>
  <%= link_to 'New Category', new_category_path %>
<% end %>
<%= link_to 'Back', root_path %>
